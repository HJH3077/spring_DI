<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="arr" class="com.ict.ex04.DI_Array">
		<!-- 값을 설정하는 방법 2가지 : 생성자, setter -->
		<!-- 배열처리 <list> 사용, 자료형은 신경쓰지 않음 -->
		<!-- setter이므로 property 사용 -->
		<!-- value에서 자료형을 신경쓰지 않아도 알아서 맞게 들어감 -->
		<property name="arr1">
			<list>
				<value>1000</value>
				<value>2000</value>
				<value>3000</value>
				<value>4000</value>
			</list>
		</property>
		<property name="arr2">
			<list>
				<value>1000</value>
				<value>2000</value>
				<value>3000</value>
				<value>4000</value>
			</list>
		</property>
	</bean>
	
	<bean id="arr2" class="com.ict.ex04.DI_Array">
	
	</bean>
</beans>
